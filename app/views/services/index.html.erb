<% content_for :navbar do %>
    <%= render 'shared/navbar_home' %>
<% end %>

<%# search bar %>
<form action="">
  <span class="iconify" data-icon="ei:search" data-inline="false"></span>
  <input type="text" value="<%= @keyword %>">
</form>
<%# results Number %>
<div class="search-result">
  <p>Viewing <%= pluralize( @services.count, 'Unlicensed talent' ) %>.</p>
</div>

<%# result lists %>

<div class="cards-service">
  <% @services.each do |service| %>
      
      <div class="card-service">

        <div class="card-service-img">
          <% if service.user.photo.attached? %>
            <%= cl_image_tag service.user.photo.key, height: 300, width: 400, crop: :fill, class: '' %>
          <% else %>
            <%= image_tag "https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png", class: '' %>
          <% end %>

          <div>
            <% if service.average_rating.nil? %>
              <p>No reviews yet</p>
            <% else %>
              <p><%= service.average_rating %><i class="fas fa-star"></i></p>
            <% end %>
          </div>
          
        </div>
      
        <div class="card-service-info">
          <h6><%= service.user.first_name %> <%= service.user.last_name[0] %>.</h6>
          <h3><%= service.title %></h3>
          <p>$<%= service.rate %>/hour</p>
        </div>
      </div>

  <% end %>
</div>


<%# map %>
<div
  class="map-right"
  id="map"
  style="width: 1000px;
  height: 100vh;
  position: sticky;
  top: 0;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>