<%# search bar %>
<form method="get" action="/services" class="search-bar__fullwidth">
  <div class="search-bar__container">
    <span class="iconify" data-icon="ei:search" data-inline="false"></span>
    <input type="text" value="<%= @keyword %>" name="search">
  </div>
</form>

<%# search Result %>
<div class="result-container">
  <%# Service Cards on the left %>
  <div class="cards-service">
    <p class="result-text">Viewing <%= pluralize( @services.count, 'talented newcomer' ) %>.</p>
    <% @services.each do |service| %>
      <%= render 'shared/service_card', service: service %>
    <% end %>
  </div>

  <%# Map on the right %>
  <div
    class="result-map"
    id="map"
    style=" 
      width: 50vw;
      height: 100vh;
      position: sticky;
      top: 0;
      "
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>