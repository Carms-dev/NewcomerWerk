<div class="container">
  <h1>Services#index</h1>
  <p>Find me in app/views/services/index.html.erb</p>

  <% @services.each do |service| %>
    <%= link_to service_path(service) do %>
      <h3><%= service.title %></h3>
    <% end %>
    <%= link_to user_path(service.user) do %>
      <h6><%= service.user.first_name %> <%= service.user.last_name %></h6>
    <% end %>
    <p><%= service.description %></p>
    <p><%= service.rate %> $/hour</p>
    <p><%= service.years_experience %> years of experience</p>
    <%= link_to 'edit', edit_service_path(service) %>
    <%= link_to 'delete', service_path(service), method: :delete, data: {confirm: 'Are you sure?'} %>
  <% end %>
</div>
