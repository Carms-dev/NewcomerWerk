<div class="container">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto">

    <%= simple_form_for [@service, @booking] do |f| %>
      <%= f.input :start, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :end, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :message %>

      <%= f.button :submit, "Book now", class: "button-solid" %>

    <% end %>
  </div>
</div>
