
<div class="my-container">

  <div class="requests">

    <section id="tabs">
    <div class="container">
      <div class="row">
        <div class="col-s-12 ">
          <nav>
            <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
              <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Incoming Bookings(<%=@bookings_by_you.size%>)</a>
              <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Outgoing Bookings(<%=@bookings_for_you.size%>)</a>
            </div>
          </nav>
          <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
              <% @bookings_by_you.each do |b| %>
                <div class="requests-card">

                <% if b.service.photos.empty? %>
                  <div class="backgroun-image" style="background-image: url(https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcTtPtBW4Rw0SPkwgxokYqQW4jRJjuEgDDbTM8ULc4zzoHCT4g1j)">
                  <h3><%= b.service.title %></h3>


                  </div>
                <% else %>
                  <div class="backgroun-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path b.service.photos.first.key %>)">
                  <h3><%= b.service.title %></h3>


                  </div>
                <% end %>



                  <div class="details">

                    <div class="provider">
                      <%= link_to user_path(b.user) do %>
                        <h6><%= b.service.user.first_name %> <%= b.service.user.last_name %></h6>
                        <% if b.service.user.photo.attached? %>
                          <%= cl_image_tag b.service.user.photo.key, height: 300, width: 400, crop: :fill, class: 'avatar' %>
                        <% else %>
                          <%= image_tag "https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                        <% end %>
                      <% end %>
                    </div>
                    <div class="aligned-title">
                      <p>Address: <%= b.service.address %></p>
                      <p>Date: <%= b.start.to_date %></p>
                      <p>Status: <%= b.status %></p>
                      <p>Completed
                        <span>
                          <% if b.completed %>
                            <i class="far fa-check-square"></i>
                          <% else %>
                            <i class="far fa-square"></i>
                          <% end %>
                        </span>
                      </p>
                    </div>
                  </div>



                </div>

            <% end %>


            </div>
            <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">

              <% @bookings_for_you.each do |b| %>

                <div class="requests-card">

                  <% if b.service.photos.empty? %>
                    <div class="backgroun-image" style="background-image: url(https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcTtPtBW4Rw0SPkwgxokYqQW4jRJjuEgDDbTM8ULc4zzoHCT4g1j)">


                    </div>
                  <% else %>
                    <div class="backgroun-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path b.service.photos.first.key %>)">
                    <h3><%= b.service.title %></h3>


                    </div>
                  <% end %>

                  <div class="details">

                    <div class="provider">
                      <%= link_to user_path(b.user) do %>
                        <h6><%= b.user.first_name %> <%= b.user.last_name %></h6>
                        <% if b.service.user.photo.attached? %>
                          <%= cl_image_tag b.service.user.photo.key, height: 300, width: 400, crop: :fill, class: 'avatar' %>
                        <% else %>
                          <%= image_tag "https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                        <% end %>
                      <% end %>
                    </div>

                    <div class="aligned-title">

                      <p>Address: <%= b.service.address %></p>
                      <p>Date: <%= b.start.to_date %></p>
                      <p>Message: <%= b.message %></p>
                      <p>Status: <%= b.status %></p>
                      <p>Completed
                        <span>
                          <% if b.completed %>
                            <i class="far fa-check-square"></i>
                          <% else %>
                            <i class="far fa-square"></i>
                          <% end %>
                        </span>
                      </p>

                    </div>


                    <div class="buttons-links">
                      <%= link_to 'Accept', accept_path(b), method: :patch, class: 'small-btn' %>
                      <%= link_to 'Decline', decline_path(b), method: :patch, class: 'small-btn' %>
                      <%= link_to 'Completed', complete_path(b), method: :patch, class: 'small-btn' %>
                    </div>

                  </div>

                </div>
              <% end %>

              </div>

            </div>

          </div>

        </div>
      </div>
    </div>
  </section>

</div>

</div>

