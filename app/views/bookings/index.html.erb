
<div class="container">

  <h2>[Incoming] Bookings I've got from people who booked my service</h2>
    <% @bookings_for_you.each do |b| %>
      <h3><%= b.service.title %></h3>
      <p>Service Provider:
        <span>
          <%= link_to user_path(b.service.user) do %>
            <%= b.service.user.first_name %> <%= b.service.user.last_name %>
          <% end %>
        </span>
      </p>
      <p>Message: <%= b.message %></p>
      <p>Status: <%= b.status %></p>
      <p>Completed
        <span>
          <% if b.completed %>
            <i class="far fa-check-square"></i>
          <% else %>
            <i class="far fa-square"></i>
          <% end %>
        </span>
      </p>

      <%= link_to 'Accept', accept_path(b), method: :patch, class: 'small-btn' %>
      <%= link_to 'Decline', decline_path(b), method: :patch, class: 'small-btn' %>
      <%= link_to 'Completed', complete_path(b), method: :patch, class: 'small-btn' %>
    <% end %>

</div>

