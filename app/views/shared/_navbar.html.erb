<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: 'navbar-brand' do %>
    <i class="far fa-id-badge"></i><span> The Unlicensed</span>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Services", services_path, class: "nav-link", id: "nav-btn" %>
        </li>
        <li class="nav-item">
          <%= link_to "Dashboard", dashboard_path, class: "nav-link", id: "nav-btn" %>
        </li>
        <li class="nav-item">
          <%= link_to "Profile", user_path(current_user), class: "nav-link nav-btn", id: "nav-btn" %>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="nav-btn" href="#">Support</a>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Add Service", new_service_path, class: "dropdown-item" %>
            <a class="dropdown-item" href="#">Settings</a>
            <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>

      <% else %>

        <li class="nav-item">
          <a class="nav-link" id="nav-btn" href="#">About Us</a>
        </li>


        <li class="nav-item">
          <%= link_to "Sign Up", new_user_registration_path, class: "nav-link", id: "nav-btn" %>
        </li>

        <li class="nav-item">
          <%= link_to "Log In", new_user_session_path, class: "nav-link", id: "nav-btn" %>
        </li>

      <% end %>

    </ul>
  </div>
</div>
