<div class="card-service" data-lat="<%= service.latitude %>" data-lng="<%= service.longitude %>">

    <div class="card-service-img">
    <% if service.user.photo.attached? %>
        <%= cl_image_tag service.user.photo.key, height: 250, width: 400, crop: :fill, class: '' %>
    <% else %>
        <%= image_tag "https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png", class: '' %>
    <% end %>

    <div class="image-tag">
        <% if service.average_rating.nil? %>
        <p>No reviews yet</p>
        <% else %>
        <p><%= service.average_rating %><i class="fas fa-star"></i></p>
        <% end %>
    </div>
    
    </div>

    <div class="card-service-info">
    <%= link_to service_path(service) do %>
        <h3><%= service.user.first_name %> <%= service.user.last_name[0] %>.</h3>
    <% end %>
    <h4><%= service.title %></h4>
    <p class="price-tag">$<%= service.rate %>/hour</p>
    </div>
</div>