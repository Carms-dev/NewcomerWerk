<% if @user.photo.attached? %>
  <%= cl_image_tag @user.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>
<h2><%= @user.first_name %> <%= @user.last_name %></h2>
<h4><%= @user.location %></h4>
<p><%= @user.description %></p>


<%= render "form", user: @user %>
<h4><%= link_to "Edit Profile", profile_path %></h4>
