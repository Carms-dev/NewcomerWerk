<div class="container-page container-form" >
  <div class="form-img">
    <%= image_tag("undraw_anonymous_feedback_y3co.svg") %>
  </div>
  <div class="form-content">
    <h1>Leave a review</h1>
    <p>Did you enjoy the service provided by
      <span>
        <%= link_to user_path(@booking.service.user) do %>
          <%= @booking.service.user.full_name %>
        <% end %>
      </span>?
    </p>

    <div class="form-inputs">
      <%= simple_form_for [@booking, @review] do |f| %>
        <div class="form-grid">
          <%= f.input :rating,
                      as: :integer,
                      required: true,
                      autofocus: true,
                      label: 'Rating (1-5)',
                      label_html: { class: 'login-label' },
                      wrapper_html: { class: 'login-form-input input-long' },
                      input_html: { class: 'login-input', min: '0', step: '1', max: '5' } %>
          <%= f.input :content,
                      as: :text,
                      required: true,
                      label_html: { class: 'login-label'},
                      wrapper_html: { class: 'login-form-input input-long input-tall' },
                      input_html: { class: 'login-input' } %>
        </div>
        <%= f.submit "Add Review", class: 'btn-lg-blue mt-20' %>
      <% end %>
    </div>

  </div>
</div>
