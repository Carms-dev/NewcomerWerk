<div class="container-form container-page">
  <div class="form-img">
    <%= image_tag("sign-up.svg") %>
  </div>
  <div class="form-content">
    <h1>Join us!</h1>
    <div class="form-inputs">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-grid">
          <%= f.input :first_name,
                      wrapper_html: { class: 'login-form-input' },
                      label_html: { class: 'login-label'},
                      label: 'First Name',
                      input_html: { class: 'login-input'}%>
          <%= f.input :last_name,
                      wrapper_html: { class: 'login-form-input' },
                      label_html: { class: 'login-label'},
                      label: 'Last Name',
                      input_html: { class: 'login-input'}%>
          <%= f.input :location,
                      wrapper_html: { class: 'login-form-input' },
                      label_html: { class: 'login-label'},
                      input_html: { class: 'login-input'}%>
          <%= f.input :photo,
                      as: :file,
                      input_html: { class: 'photo-input'},
                      label_html: { class: 'photo-label'},
                      label: 'ðŸ“· Upload Picture' %>
          <%= f.input :description,
                      as: :text,
                      wrapper_html: { class: 'login-form-input input-long input-tall' },
                      label_html: { class: 'login-label'},
                      input_html: { class: 'login-input'}%>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      wrapper_html: { class: 'login-form-input input-long' },
                      label_html: { class: 'login-label'},
                      input_html: { class: 'login-input', autocomplete: "email" }%>
          <%= f.input :password,
                      required: true,
                      wrapper_html: { class: 'login-form-input' },
                      label_html: { class: 'login-label'},
                      input_html: { class: 'login-input', autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      wrapper_html: { class: 'login-form-input' },
                      label_html: { class: 'login-label'},
                      label: 'Confirm Password',
                      input_html: { class: 'login-input', autocomplete: "new-password" } %>
        
        </div>
        <%= f.button :submit, "Sign Up" , class: 'btn-sm-blue' %>

      <% end %>
    </div>
  </div>

</div>

