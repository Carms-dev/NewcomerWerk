<div class="container-form container-page">
  <div class="form-img">
    <%= image_tag("log-in.svg") %>
  </div>
  <div class="form-content">
    <h1>Welcome Back!</h1>
    <div class="form-inputs">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label_html: { class: 'login-label'},
                    wrapper_html: { class: 'login-form-input' },
                    input_html: { class: 'login-input', autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    label_html: { class: 'login-label'},
                    wrapper_html: { class: 'login-form-input' },
                    input_html: { class: 'login-input', autocomplete: "current-password" } %>
        <div class="form-links">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'blue' %>
        </div>
        <%= f.button :submit, "Log In", class: 'btn-sm-blue' %>
      <% end %>

    </div>
  </div>
</div>
