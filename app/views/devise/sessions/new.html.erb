<% content_for :navbar do %>
    <%= render 'shared/navbar_home' %>
<% end %>

<div class="container-login" id="login">
  <div class="login-img">
    <%= image_tag("https://cdn.dribbble.com/users/1355613/screenshots/8124867/media/63db86d8d37b6b882d5efb6d8798877a.jpg") %>

  </div>
  <div class="login-content">
    <h1>Welcome Back!</h1>
      <div class="login-form">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        label_html: { class: 'login-label'},
                        wrapper_html: { class: 'login-form-input' },
                        input_html: { class: 'login-input', autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        label_html: { class: 'login-label'},
                        wrapper_html: { class: 'login-form-input' },
                        input_html: { class: 'login-input', autocomplete: "current-password" } %>
            <div class="login-links">
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              <%= render "devise/shared/links" %>
            </div>
            <%= f.button :submit, "Log in", class: 'btn-sm-blue' %>
          <% end %>

      </div>
  </div>
</div>
